<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".MainControlsFragment">
    <data>
        <variable
            name="viewModel"
            type="edu.pdx.robot_car.robotcarapp.model.MotorDataViewModel" />
    </data>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="move Up"
            tools:layout_editor_absoluteX="140dp"
            tools:layout_editor_absoluteY="98dp" />

        <Button
            android:id="@+id/down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="move Down" />
        <Button
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="move Right" />
        <Button
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="move Left" />
        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="?android:attr/listDivider" />
        <Button
            android:id="@+id/motorStatusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motor Status Details"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="475dp" />

        <Button
            android:id="@+id/videoFeedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live Video"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="536dp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/upCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Up Count: "
            android:textSize="20sp"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="596dp" />

        <TextView
            android:id="@+id/rightCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Right Count: "
            android:textSize="20sp"
            tools:layout_editor_absoluteX="211dp"
            tools:layout_editor_absoluteY="655dp" />

        <TextView
            android:id="@+id/downCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Down Count: "
            android:textSize="20sp"
            tools:layout_editor_absoluteX="211dp"
            tools:layout_editor_absoluteY="600dp" />

        <TextView
            android:id="@+id/leftCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left Count: "
            android:textSize="20sp"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="651dp" />



</LinearLayout>
</FrameLayout>

</layout>